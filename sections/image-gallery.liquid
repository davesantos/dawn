
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'image' -%}
      {%- assign image_size = section.settings.image_slide_size | append: 'x' -%}

      {%- if block.settings.link_to_product != blank -%}<a href="{{ block.settings.link_to_product}}">{%- endif -%}
      {%- if block.settings.image_slide != blank -%}
      <img class="image__slide" {{ block.shopify_attributes }} src="{{ block.settings.image_slide | img_url: image_size }}" alt="{{ block.settings.image_slide.alt }}" />
      {%- endif -%}
      {%- if block.settings.link_to_product != blank -%}</a>{%- endif -%}
  {%- endcase -%}
{%- endfor -%}


{% schema %}
  {
    "name": "Image Gallery",
    "tag": "section",
    "settings": [
      {
        "type": "range",
        "id": "image_slide_size",
        "min": 100,
        "max": 2000,
        "step": 100,
        "default": 600,
        "unit": "x",
        "label": "Image Size"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_slide",
            "label": "Slide"
          },
          {
            "type": "url",
            "id": "link_to_product",
            "label": "URL to Product"
          }
        ]
      }
    ]
  }
{% endschema %}

